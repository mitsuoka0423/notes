{
  "customizations": {
    "vscode": {
      "extensions": [
        "bierner.markdown-mermaid",
        "Gruntfuggly.todo-tree",
        "ionutvmi.path-autocomplete",
        "ms-azuretools.vscode-docker",
        "ms-edgedevtools.vscode-edge-devtools",
        "oderwat.indent-rainbow",
        "poyonshot.markdowncat",
        "richie5um2.vscode-sort-json",
        "3w36zj6.textlint",
        "yzhang.markdown-all-in-one",
        "zenn.zenn-preview"
      ],
      "settings": {
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "textlint.autoFixOnSave": true,
        "textlint.configPath": "/workspace/.textlintrc.json",
        "textlint.ignorePath": "/workspace/devcontainer",
        "textlint.languages": [
          ".md",
          ".mdcat"
        ],
        "textlint.nodePath": "/usr/local/bin/node"
      }
    }
  },
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "name": "zenn dev container",
  "postStartCommand": "npm i -g @google/gemini-cli && npm ci && npm run zenn:preview",
  "remoteUser": "root",
  "service": "zenn-dev-container",
  "workspaceFolder": "/workspace"
}